<Page
    x:Class="HelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="60,157,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>
        <Button x:Name="button" Content="Say Hello" HorizontalAlignment="Left" Margin="225,157,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="60,64,0,0" TextWrapping="Wrap" Text="Hello, world!" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="60,132,0,0" TextWrapping="Wrap" Text="What is you name?" VerticalAlignment="Top"/>
        <TextBlock x:Name="greetingOutput" HorizontalAlignment="Left" Height="156" Margin="60,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>

    </Grid>
</Page>
